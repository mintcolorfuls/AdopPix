@page
@model AdopPix.Pages.auth.LoginModel
@{
}

<div class="d-flex justify-content-center align-items-center" style="height: 80vh">
    <form method="post" class="w-50">
        <div>
            <img src="https://adoppix.s3.ap-southeast-1.amazonaws.com/AdopPixLogo.png" class="img-fluid" />
        </div>
        <div class="mb-3">
            <label>Email</label>
            <input type="text" class="form-control" asp-for="loginViewModel.Email" />
            <span asp-validation-for="loginViewModel.Email" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label>Password</label>
            <input type="password" class="form-control" asp-for="loginViewModel.Password" />
            <span asp-validation-for="loginViewModel.Password" class="text-danger"></span>
        </div>
        <div class="d-grid gap-2">
            <input type="submit" value="Login" class="btn btn-success w-100 mb-2" />
            <a asp-page="/auth/register" class="btn btn-outline-primary w-100 mb-2">Register</a>
        </div>

        @if (ViewData["ErrorMessage"] != null)
        {
            <p>@ViewData["ErrorMessage"]</p>
        }
    </form>
</div>
