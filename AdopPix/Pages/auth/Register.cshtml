@page
@model AdopPix.Pages.auth.RegisterModel
@{
    ViewBag.NavbarIsShow = false;
}
<div class="d-flex justify-content-center mt-3">

    @if (!Model.GoConfirmEmail)
    {
        <div class="w-50">
            <form method="post" class="controller-form">
                <div>
                    <h2 style="font-weight: 900;
font-size: 58px;
line-height: 70px;
text-align: center;
color: #4F9FDA;">
                        AdopPix
                    </h2>
                    <p style="font-weight: 700;
font-size: 14px;
line-height: 18px;
text-align: center;
color: #ADADAD;">
                        เริ่มต้นการประมูลรูปภาพของคุณกับเราสิ
                    </p>
                    <h4 style="text-align:center; font-weight: 900; font-size: 24px; line-height: 28px; color: #4A4A4A;">
                        เข้าสู่ระบบ
                    </h4>
                </div>
                <div style="  padding: 0px 25px;">
                    <div class="mb-3">
                        <label>Email</label>
                        <input type="text" class="form-control input-rework" asp-for="registerViewModel.Email" />
                        <span asp-validation-for="registerViewModel.Email" class="text-danger"></span>
                    </div>
                    <div class="mb-3">
                        <label>Password</label>
                        <input type="password" class="form-control input-rework" asp-for="registerViewModel.Password" />
                        <span asp-validation-for="registerViewModel.Password" class="text-danger"></span>
                    </div>
                    <div class="mb-3">
                        <label>Confirm Password</label>
                        <input type="password" class="form-control input-rework" asp-for="registerViewModel.ConfirmPassword" />
                        <span asp-validation-for="registerViewModel.ConfirmPassword" class="text-danger"></span>
                    </div>
                    <div class="mb-3">
                        <label>AdopPix ID</label>
                        <input type="text" class="form-control input-rework" asp-for="registerViewModel.AdopPixId" />
                        <span asp-validation-for="registerViewModel.AdopPixId" class="text-danger"></span>
                    </div>
                    <div class="mb-3">
                        <div class="form-check form-check-inline">
                            <input asp-for="registerViewModel.Gender" type="radio" id="male" value="0" class="form-check-input" />
                            <label class="form-check-label">Male</label>
                        </div>
                        <div class="form-check form-check-inline">
                            <input asp-for="registerViewModel.Gender" type="radio" id="female" value="1" class="form-check-input" />
                            <label class="form-check-label">Female</label>
                        </div>
                    </div>
                    <div class="mb-3">
                        <input type="datetime-local" asp-for="registerViewModel.BirthDay" />
                        <span asp-validation-for="registerViewModel.BirthDay" class="text-danger"></span>
                    </div>
                    <div class="form-check">
                        <input class="form-check-input" type="checkbox" asp-for="registerViewModel.Agree">
                        <label class="form-check-label" style="display: inline-flex;" for="flexCheckDefault">
                            I agree to the &nbsp;<a style="color: #5BD8FF;">Terms of use &nbsp;</a> and &nbsp;<a style="color: #5BD8FF;"> Privacy Policy</a>
                        </label>
                        <br />
                        <span asp-validation-for="registerViewModel.Agree" class="text-danger"></span>
                    </div>
                </div>
                <div class="d-grid gap-2">
                    <input type="submit" class="w-100 register" value="Register">
                    <a asp-page="/auth/login" class="mt-3 w-100 backtologin">back to login</a>
                </div>

            </form>
        </div>
    }
    else
    {
        <div class="w-100 d-flex justify-content-center align-items-center mt-3" style="height: 75vh;">
            <div class="h-75">
                <div class="d-flex justify-content-center">
                    <img src="https://d338t8kmirgyke.cloudfront.net/icons/icon_pngs/000/007/873/original/email.png" class="img-fluid w-50" />
                </div>
                <h3>Go to your email to confirm your email.</h3>
                <div class="d-grid gap-2 mt-5">
                    <a asp-page="/auth/login" class="btn btn-outline-dark w-100">Back to login</a>
                </div>
            </div>
        </div>
    }
</div>


<style>

    body {
        background: url('https://adoppixstorage.s3.ap-southeast-1.amazonaws.com/bg-register.jpg') no-repeat !important;
    }

    .text-input {
        font-size: 1.5rem;
    }

    .controller-form {
        background: rgba(255, 255, 255, 0.9);
        padding: 30px;
        border-radius: 10px;
    }

    .input-rework {
        border-radius: 50px;
        border: none;
        background: #EEEEEE;
        padding: 22px 26px;
        font-size: 20px;
    }

    .register {
        background-color: #4F9FDA;
        color: white;
        border-radius: 41px;
        padding: 15px;
        text-decoration: none;
        margin-top: 40px;
        font-weight: 700;
        font-size: 26px;
        line-height: 30px;
        border: none;
    }

    .backtologin {
        background-color: white;
        color: #5F5F5F;
        border-radius: 41px;
        padding: 15px;
        text-decoration: none;
        box-shadow: 1px 1px 1px rgb(197, 197, 197);
        font-weight: 700;
        font-size: 26px;
        line-height: 30px;
        display: grid;
        text-align: center;
    }
</style>