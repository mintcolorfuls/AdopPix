@model AccountSettingViewModel

<div class="d-flex justify-content-center mt-3">
    <div class="w-25">
        <div class="d-flex justify-content-center">
            @if (@Model.AvaterName != "")
            {
                <img src="@Url.Content($"https://adoppix.s3.ap-southeast-1.amazonaws.com/{@Model.AvaterName}")" style="border-radius: 50%; width: 200px; height: 200px; object-fit: cover;" id="blah"/>
            }
        </div>

        @*@if (@Model.CoverName != "")
        {
            <h3>Cover Example</h3>
            <img width="300" src="@Url.Content($"https://adoppix.s3.ap-southeast-1.amazonaws.com/{@Model.CoverName}")" style="border-radius: 50%;" />
        }*@

        <form asp-action="Setting" method="post" enctype="multipart/form-data">
            @*<div class="mb-3">
                <label class="form-label">Cover Image</label>
                <input type="file" asp-for="@Model.CoverFile" class="form-control" />
                <input type="hidden" asp-for="@Model.CoverName" id="formFile" />
                <span asp-validation-for="CoverFile"></span>
                </div>*@
            <div class="mb-3">
                <label class="form-label">Avatar Image</label>
                <input type="file" asp-for="@Model.AvatarFile" class="form-control" id="imgInp"/>
                <input type="hidden" asp-for="@Model.AvaterName" id="formFile" />
                <span asp-validation-for="AvatarFile"></span>
            </div>
            <hr />
            <div class="">
                <div class="d-grid gap-2">
                    <a asp-page="/auth/setting" class="btn btn-outline-dark w-100">Security Setting</a>
                </div>
            </div>
            <hr />
            <div class="mb-3">
                <label>Description</label>
                <input type="text" class="form-control" asp-for="@Model.Description" />
                <span asp-validation-for="@Model.Description" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label>FirstName</label>
                <input type="text" class="form-control" asp-for="@Model.Fname" />
                <span asp-validation-for="@Model.Fname" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label>LastName</label>
                <input type="text" class="form-control" asp-for="@Model.Lname" />
                <span asp-validation-for="@Model.Lname" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label>Gender</label>
                <input type="text" class="form-control" asp-for="@Model.Gender" disabled />
                <span asp-validation-for="@Model.Gender" class="text-danger"></span>
            </div>
            <div class="d-grid gap-2 mt-5">
                <input type="submit" class="btn btn-success w-100" value="Save">
                <a asp-controller="Home" asp-action="Index" class="btn btn-outline-dark mt-3 w-100">back to index</a>
            </div>
        </form>
    </div>
</div>
<script>
        imgInp.onchange = evt => {
            const [file] = imgInp.files
            if (file) {
                blah.src = URL.createObjectURL(file)
            }
        }
</script>